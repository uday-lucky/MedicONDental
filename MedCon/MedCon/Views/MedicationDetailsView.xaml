                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Style="{StaticResource LabelStyle}"
                           BackgroundColor="#ffffff"
                           Text="{Binding Doses}"
                           HorizontalTextAlignment="Center" />
                </Grid>
                <Grid ColumnSpacing="2"
                      RowSpacing="0.5"
                      BackgroundColor="#cccccc"
                      WidthRequest="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
