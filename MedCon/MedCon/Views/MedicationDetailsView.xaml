                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Style="{StaticResource LabelStyle}"
                           BackgroundColor="#f5f5f5"
                           Text="{Binding Doses}"
                           HorizontalTextAlignment="Center" />
                </Grid>-->
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>